@model RegisterViewModel

@{
    Layout = "_LayoutEmpty";
    ViewBag.BodyClass = "text-center";
    ViewBag.Title = "Create an account for My Wishly";
}

<style type="text/css">
    html,
    body {
        height: 100%;
    }

    body {
        display: flex;
        align-items: center;
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
    }

    .form-register {
        max-width: 400px;
        padding: 15px;
    }

    .form-register .form-control {
        margin-bottom: 1rem;
    }

    .form-register .form-floating:focus-within {
        z-index: 2;
    }
</style>

<main class="form-register w-100 m-auto">
    <form asp-action="Register" asp-antiforgery="true" method="post">
        <img class="mb-4" src="~/images/logoBlk.svg" alt="My Wishly Logo" width="72" height="57">
        <h1 class="h2 mb-3 fw-normal">My Wishly</h1>
        <h2 class="h4 mb-3 fw-normal">Register New Account</h2>
        <div class="invalid-feedback"><span asp-validation-for="Name"></span></div>
        <div class="form-floating">
            <input asp-for="Name" class="form-control" placeholder="Joe">
            <label asp-for="Name"></label>
        </div>
        <div class="invalid-feedback"><span asp-validation-for="Email"></span></div>
        <div class="form-floating">
            <input asp-for="Email" class="form-control" placeholder="your@emailaddress.com">
            <label asp-for="Email"></label>
        </div>
        <div class="invalid-feedback"><span asp-validation-for="Password"></span></div>
        <div class="form-floating">
            <input asp-for="Password" class="form-control" placeholder="Password">
            <label asp-for="Password"></label>
        </div>
        <div class="invalid-feedback"><span asp-validation-for="PasswordAgain"></span></div>
        <div class="form-floating">
            <input asp-for="PasswordAgain" class="form-control" placeholder="Repeat">
            <label asp-for="PasswordAgain"></label>
        </div>

        <button class="w-100 btn btn-lg btn-primary" type="submit">Register</button>
        <p class="pt-2">
            <a asp-action="Login">Log in to an existing account</a>
        </p>
        <p class="mt-5 mb-3 text-muted">&copy; @(DateTime.Now.Year) My Wishly. All rights reserved.</p>
    </form>
</main>