@model LoginViewModel

@{
    Layout = "_LayoutEmpty";
    ViewBag.BodyClass = "text-center";
    ViewBag.Title = "Log in to My Wishly";
}

<style type="text/css">
    html,
    body {
        height: 100%;
    }

    body {
        display: flex;
        align-items: center;
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
    }

    .form-signin {
        max-width: 400px;
        padding: 15px;
    }

    .form-signin .form-floating:focus-within {
        z-index: 2;
    }

    .form-signin input[type="email"] {
        margin-bottom: -1px;
        border-bottom-right-radius: 0;
        border-bottom-left-radius: 0;
    }

    .form-signin input[type="password"] {
        margin-bottom: 10px;
        border-top-left-radius: 0;
        border-top-right-radius: 0;
    }
</style>

<main class="form-signin w-100 m-auto">

    @if (ViewBag.EmailVerified is bool b && b)
    {
        <div class="alert alert-success" role="alert">
            <i class="fas fa-check-circle fa-lg fa-fw"></i>
            <strong>Email verified!</strong> You may now log in.
        </div>
    }

    <form asp-action="Login" asp-antiforgery="true" method="post">
        <img class="mb-4" src="~/images/logoBlk.svg" alt="My Wishly Logo" width="72" height="57">
        <h1 class="h2 mb-3 fw-normal">My Wishly</h1>
        <h2 class="h4 mb-3 fw-normal">Please Sign In</h2>

        <div class="form-floating">
            <input asp-for="Username" class="form-control" placeholder="name@example.com">
            <label asp-for="Username">Email address</label>
        </div>
        <div class="form-floating">
            <input asp-for="Password" class="form-control" placeholder="Password">
            <label asp-for="Password">Password</label>
        </div>

        <div class="invalid-feedback"><span asp-validation-for="Username"></span></div>

        <div class="checkbox mb-3">
            <label>
                <input asp-for="RememberMe"> Keep me signed in
            </label>
        </div>
        <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
        <p class="pt-2">
            <a asp-action="Register">Create an account</a>
        </p>
        <p class="mt-5 mb-3 text-muted">&copy; @(DateTime.Now.Year) My Wishly. All rights reserved.</p>
    </form>
</main>